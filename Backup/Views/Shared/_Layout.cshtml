@using FastQ.Web.Services
@{
    Layout = null;
    var providerUserId = new AuthService().GetLoggedInWindowsUser();
    var providerTodayUrl = Url.Action("Today", "Provider", new
    {
        userId = string.IsNullOrWhiteSpace(providerUserId) ? null : providerUserId
    });
}
<!DOCTYPE html>
<html>
<head>
    <title>FastQ Prototype (Live SignalR)</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+3:wght@400;500;600&family=Space+Grotesk:wght@500;600;700&display=swap" rel="stylesheet" />
    <style>
        :root {
            --bg: #f6efe6;
            --bg-accent: #fdebd3;
            --ink: #121212;
            --muted: #5c6168;
            --accent: #ff6b35;
            --accent-2: #1f7a6c;
            --accent-3: #f2b705;
            --card: rgba(255, 255, 255, 0.86);
            --border: rgba(18, 18, 18, 0.08);
            --shadow: 0 18px 45px rgba(19, 26, 38, 0.16);
            --radius: 18px;
            --radius-sm: 12px;
            --drawer-width: 260px;
            --drawer-collapsed-width: 86px;
            --font-heading: "Space Grotesk", "Trebuchet MS", sans-serif;
            --font-body: "Source Sans 3", "Segoe UI", sans-serif;
        }

        * { box-sizing: border-box; }
        body {
            margin: 0;
            font-family: var(--font-body);
            color: var(--ink);
            background: radial-gradient(circle at top left, #fff2dd 0%, transparent 45%),
                        radial-gradient(circle at 20% 60%, #e6f6f2 0%, transparent 50%),
                        linear-gradient(120deg, var(--bg), var(--bg-accent));
            min-height: 100vh;
        }

        body::before,
        body::after {
            content: "";
            position: fixed;
            width: 320px;
            height: 320px;
            border-radius: 50%;
            filter: blur(0);
            opacity: 0.45;
            z-index: -1;
        }

        body::before {
            background: radial-gradient(circle, rgba(255, 107, 53, 0.35), transparent 70%);
            top: -80px;
            right: -120px;
        }

        body::after {
            background: radial-gradient(circle, rgba(31, 122, 108, 0.35), transparent 70%);
            bottom: -120px;
            left: -80px;
        }

        a { color: inherit; text-decoration: none; }
        code {
            background: rgba(18, 18, 18, 0.06);
            padding: 2px 6px;
            border-radius: 6px;
            font-size: 13px;
        }

        .layout { display: grid; grid-template-columns: var(--drawer-width) 1fr; min-height: 100vh; }
        .drawer {
            background: rgba(255, 255, 255, 0.9);
            border-right: 1px solid var(--border);
            padding: 22px 16px;
            display: grid;
            grid-template-rows: auto 1fr auto;
            gap: 22px;
            box-shadow: inset -1px 0 0 rgba(0,0,0,0.04);
            backdrop-filter: blur(12px);
        }
        .drawer .brand { display: grid; justify-items: center; align-items: center; text-align: center; gap: 10px; }
        .brand-top { display: flex; align-items: center; justify-content: space-between; width: 100%; }
        .logo-mark {
            width: 52px;
            height: 52px;
            border-radius: 16px;
            display: grid;
            place-items: center;
            font-family: var(--font-heading);
            font-weight: 700;
            color: #fff;
            background: linear-gradient(135deg, var(--accent), var(--accent-2));
            box-shadow: 0 12px 24px rgba(31, 122, 108, 0.3);
        }
        .brand-title {
            font-family: var(--font-heading);
            font-size: 18px;
            font-weight: 700;
        }
        .nav-toggle {
            width: 34px;
            height: 34px;
            border-radius: 10px;
            border: 1px solid var(--border);
            background: #fff;
            display: grid;
            place-items: center;
            cursor: pointer;
            transition: all 0.15s ease;
        }
        .nav-toggle svg { width: 16px; height: 16px; transition: transform 0.2s ease; }
        .nav-toggle:hover { transform: translateY(-1px); box-shadow: 0 8px 18px rgba(16, 24, 40, 0.12); }
        .brand-sub { font-size: 12px; color: var(--muted); }
        .drawer-nav {
            display: grid;
            gap: 16px;
            overflow-y: auto;
            min-height: 0;
            padding-right: 6px;
            align-content: start;
        }
        .nav-section { display: grid; gap: 6px; }
        .nav-title {
            font-size: 11px;
            letter-spacing: 0.18em;
            text-transform: uppercase;
            color: var(--muted);
            padding: 0 8px;
        }
        .nav-link {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px 12px;
            border-radius: 12px;
            font-weight: 600;
            min-height: 40px;
            line-height: 1.2;
            border: 1px solid transparent;
            transition: all 0.15s ease;
        }
        .nav-link .icon { width: 18px; height: 18px; opacity: 0.8; }
        .nav-text { white-space: nowrap; }
        .nav-link:hover { background: rgba(0,0,0,0.04); border-color: rgba(0,0,0,0.08); }
        .nav-link.active { background: rgba(31, 122, 108, 0.12); color: var(--accent-2); border-color: rgba(31, 122, 108, 0.25); }
        .drawer-footer { align-self: end; display: grid; gap: 10px; }
        .status-card {
            padding: 12px 14px;
            border-radius: var(--radius-sm);
            border: 1px solid var(--border);
            background: rgba(255,255,255,0.8);
            display: grid;
            gap: 6px;
        }
        .status-title { font-size: 12px; color: var(--muted); text-transform: uppercase; letter-spacing: 0.14em; }
        body.nav-collapsed { --drawer-width: var(--drawer-collapsed-width); }
        body.nav-collapsed .nav-title,
        body.nav-collapsed .brand-title,
        body.nav-collapsed .brand-sub,
        body.nav-collapsed .nav-text,
        body.nav-collapsed .drawer-footer { display: none; }
        body.nav-collapsed .nav-link { justify-content: center; padding: 10px; }
        body.nav-collapsed .brand-top { justify-content: center; gap: 8px; }
        body.nav-collapsed .nav-toggle svg { transform: rotate(180deg); }

        .main-area { padding: 20px 24px 60px; }
        .topbar {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 20px;
            padding: 14px 18px;
            background: var(--card);
            border: 1px solid var(--border);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            margin-bottom: 20px;
            backdrop-filter: blur(14px);
        }
        .topbar-title { font-family: var(--font-heading); font-size: 20px; margin: 0; }
        .topbar-sub { color: var(--muted); font-size: 13px; }
        .top-actions { display: flex; align-items: center; gap: 10px; flex-wrap: wrap; }
        .icon-btn {
            width: 40px; height: 40px;
            border-radius: 12px;
            border: 1px solid var(--border);
            background: #fff;
            display: grid; place-items: center;
            cursor: pointer;
            transition: all 0.15s ease;
        }
        .icon-btn:hover { transform: translateY(-1px); box-shadow: 0 8px 18px rgba(16, 24, 40, 0.12); }
        .icon-btn svg { width: 18px; height: 18px; }
        .search-wrap {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 6px 10px;
            border-radius: 12px;
            border: 1px solid var(--border);
            background: #fff;
            min-width: 220px;
        }
        .search-wrap input {
            border: none;
            outline: none;
            font-size: 14px;
            width: 100%;
            font-family: var(--font-body);
        }

        .page { display: grid; gap: 20px; }
        .page-title {
            font-family: var(--font-heading);
            font-size: 32px;
            margin: 0 0 8px;
        }
        .eyebrow {
            text-transform: uppercase;
            letter-spacing: 0.16em;
            font-size: 12px;
            color: var(--muted);
        }
        .lead { font-size: 18px; color: var(--muted); margin: 0; }

        .card {
            background: var(--card);
            border-radius: var(--radius);
            border: 1px solid var(--border);
            padding: 20px;
            box-shadow: var(--shadow);
            animation: fadeUp 0.5s ease both;
        }
        .card-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 14px;
            margin-bottom: 16px;
        }
        .card-title {
            font-family: var(--font-heading);
            font-size: 20px;
            margin: 0;
        }
        .note {
            background: rgba(255, 255, 255, 0.6);
            border: 1px dashed rgba(18, 18, 18, 0.2);
        }

        .row { display: flex; gap: 16px; flex-wrap: wrap; }
        .col { flex: 1 1 320px; }
        .stack { display: grid; gap: 12px; }
        .grid-2 { display: grid; grid-template-columns: repeat(2, minmax(0, 1fr)); gap: 16px; }
        .grid-3 { display: grid; grid-template-columns: repeat(3, minmax(0, 1fr)); gap: 16px; }

        .stat {
            padding: 14px 16px;
            border-radius: var(--radius-sm);
            background: rgba(255, 255, 255, 0.8);
            border: 1px solid var(--border);
        }
        .stat-label { font-size: 12px; color: var(--muted); letter-spacing: 0.08em; text-transform: uppercase; }
        .stat-value { font-size: 18px; font-weight: 600; margin-top: 6px; }
        .pill {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 4px 10px;
            border-radius: 999px;
            background: rgba(31, 122, 108, 0.12);
            color: var(--accent-2);
            font-size: 12px;
            font-weight: 600;
        }

        .badge { display: inline-flex; align-items: center; gap: 6px; padding: 4px 10px; border-radius: 999px; background: rgba(18, 18, 18, 0.08); font-size: 12px; font-weight: 600; }
        .badge.accent { background: rgba(255, 107, 53, 0.15); color: var(--accent); }
        .badge.ink { background: rgba(18, 18, 18, 0.12); }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            padding: 10px 16px;
            border-radius: 10px;
            border: 1px solid transparent;
            font-weight: 600;
            cursor: pointer;
            background: #fff;
            transition: all 0.2s ease;
        }
        .btn:hover { transform: translateY(-1px); box-shadow: 0 6px 12px rgba(16, 24, 40, 0.12); }
        .btn.primary { background: var(--accent); color: #fff; }
        .btn.secondary { background: var(--accent-2); color: #fff; }
        .btn.ghost { background: transparent; border-color: rgba(18, 18, 18, 0.15); }
        .btn.small { padding: 6px 10px; font-size: 12px; }

        .muted { color: var(--muted); font-size: 13px; }
        .error { color: #b00020; font-weight: 600; }
        .ok { color: #0a7a0a; font-weight: 600; }

        input[type=text],
        select {
            width: 100%;
            padding: 10px 12px;
            border-radius: 10px;
            border: 1px solid rgba(18, 18, 18, 0.18);
            background: rgba(255, 255, 255, 0.9);
            font-family: var(--font-body);
            font-size: 14px;
        }
        input[type=text]:focus,
        select:focus {
            outline: none;
            border-color: var(--accent);
            box-shadow: 0 0 0 3px rgba(255, 107, 53, 0.15);
        }
        label { font-weight: 600; font-size: 13px; }

        .form-grid { display: grid; grid-template-columns: repeat(4, minmax(0, 1fr)); gap: 16px; }
        .field { display: grid; gap: 8px; }

        table { width: 100%; border-collapse: collapse; }
        .table thead th {
            text-align: left;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.08em;
            color: var(--muted);
            padding: 12px 8px;
            border-bottom: 1px solid var(--border);
        }
        .table tbody td { padding: 12px 8px; border-bottom: 1px solid rgba(18, 18, 18, 0.06); }
        .table tbody tr:hover { background: rgba(255, 255, 255, 0.65); }

        .report-grid { display: grid; grid-template-columns: repeat(4, minmax(0, 1fr)); gap: 16px; }
        .bar-track { height: 10px; border-radius: 999px; background: rgba(18, 18, 18, 0.08); overflow: hidden; }
        .bar-fill { height: 100%; border-radius: 999px; background: linear-gradient(90deg, var(--accent), var(--accent-2)); }
        .trend-row { display: grid; grid-template-columns: 120px 1fr 60px; gap: 12px; align-items: center; }

        .calendar { display: grid; gap: 12px; }
        .time-row {
            display: grid;
            grid-template-columns: 120px 1fr;
            gap: 12px;
            align-items: start;
            padding: 12px;
            border-radius: var(--radius-sm);
            background: rgba(255, 255, 255, 0.75);
            border: 1px solid var(--border);
        }
        .time-label {
            font-family: var(--font-heading);
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.12em;
            color: var(--muted);
        }
        .slot-stack { display: grid; gap: 8px; }
        .slot-card {
            background: #fff;
            border-radius: 12px;
            border: 1px solid var(--border);
            padding: 10px 12px;
            display: grid;
            gap: 10px;
        }
        .slot-header { display: flex; justify-content: space-between; gap: 10px; align-items: center; flex-wrap: wrap; }
        .slot-title { font-weight: 600; }
        .slot-meta { display: flex; gap: 8px; align-items: center; flex-wrap: wrap; }
        .status-tag {
            font-size: 11px;
            font-weight: 600;
            padding: 4px 8px;
            border-radius: 999px;
            text-transform: uppercase;
            letter-spacing: 0.06em;
        }
        .status-tag.waiting { background: rgba(255, 107, 53, 0.12); color: var(--accent); }
        .status-tag.inservice { background: rgba(31, 122, 108, 0.15); color: var(--accent-2); }
        .status-tag.done { background: rgba(18, 18, 18, 0.12); color: #3b3f45; }
        .status-tag.cancelled { background: rgba(176, 0, 32, 0.12); color: #b00020; }

        .slot-actions { display: flex; gap: 8px; flex-wrap: wrap; }

        .toast { position: fixed; right: 20px; bottom: 20px; max-width: 420px; z-index: 9999; }
        .toast-item {
            background: #111;
            color: #fff;
            padding: 12px 14px;
            border-radius: 14px;
            margin-top: 10px;
            opacity: 0.95;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        }

        .hero {
            display: grid;
            grid-template-columns: repeat(2, minmax(0, 1fr));
            gap: 20px;
            align-items: stretch;
        }

        .chip {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 8px 12px;
            border-radius: 999px;
            border: 1px solid var(--border);
            background: rgba(255,255,255,0.85);
            cursor: pointer;
            font-weight: 600;
            font-size: 13px;
            transition: all 0.15s ease;
        }
        .chip:hover { border-color: rgba(18, 18, 18, 0.2); }
        .chip.active { background: rgba(31, 122, 108, 0.12); color: var(--accent-2); border-color: rgba(31,122,108,0.3); }

        .stepper {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
            gap: 10px;
            margin: 12px 0 4px;
        }
        .step {
            border: 1px solid var(--border);
            border-radius: var(--radius-sm);
            padding: 10px 12px;
            background: rgba(255,255,255,0.8);
            display: grid;
            gap: 4px;
            position: relative;
        }
        .step .label { font-size: 12px; letter-spacing: 0.12em; text-transform: uppercase; color: var(--muted); }
        .step .name { font-weight: 700; font-family: var(--font-heading); }
        .step.active { border-color: var(--accent); box-shadow: 0 0 0 3px rgba(255, 107, 53, 0.18); }
        .step.done { border-style: dashed; opacity: 0.9; }

        .pill-toggle { display: inline-flex; gap: 6px; padding: 6px 10px; border-radius: 12px; background: rgba(18,18,18,0.04); border: 1px solid var(--border); }
        .pill-toggle button { border: none; background: transparent; padding: 6px 10px; border-radius: 10px; cursor: pointer; font-weight: 600; }
        .pill-toggle button.active { background: rgba(31, 122, 108, 0.12); color: var(--accent-2); }

        .collapsible { border: 1px solid var(--border); border-radius: var(--radius); background: rgba(255,255,255,0.86); box-shadow: var(--shadow); }
        .collapsible-header { display: flex; align-items: center; justify-content: space-between; padding: 14px 16px; cursor: pointer; }
        .collapsible-body { padding: 0 16px 16px; display: none; }
        .collapsible.open .collapsible-body { display: block; }
        .collapsible-title { font-family: var(--font-heading); font-size: 18px; margin: 0; }
        .caret { font-weight: 700; transition: transform 0.2s ease; }
        .collapsible.open .caret { transform: rotate(90deg); }

        .appts { display: grid; gap: 10px; margin-top: 8px; }
        .appt-card {
            border: 1px solid var(--border);
            border-radius: var(--radius-sm);
            background: #fff;
            padding: 12px;
            display: grid;
            gap: 8px;
        }
        .appt-top { display: flex; justify-content: space-between; gap: 10px; align-items: center; flex-wrap: wrap; }
        .appt-meta { color: var(--muted); font-size: 13px; display: flex; gap: 12px; flex-wrap: wrap; }
        .tag { padding: 4px 8px; border-radius: 8px; font-size: 12px; font-weight: 700; text-transform: uppercase; letter-spacing: 0.06em; }
        .tag.soon { background: rgba(31,122,108,0.12); color: var(--accent-2); }
        .tag.past { background: rgba(18,18,18,0.08); color: #3b3f45; }
        .tag.danger { background: rgba(176,0,32,0.12); color: #b00020; }
        .tag.neutral { background: rgba(18,18,18,0.08); color: #3b3f45; }

        .calendar-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(110px, 1fr));
            gap: 10px;
        }
        .calendar-day {
            padding: 10px;
            border-radius: var(--radius-sm);
            border: 1px dashed var(--border);
            background: rgba(255,255,255,0.9);
            text-align: center;
        }
        .calendar-day.blocked { opacity: 0.35; text-decoration: line-through; }

        .times-grid { display: flex; gap: 8px; flex-wrap: wrap; }
        .time-chip {
            padding: 8px 12px;
            border: 1px solid var(--border);
            border-radius: 10px;
            cursor: pointer;
            font-weight: 600;
        }
        .time-chip.active { border-color: var(--accent); background: rgba(255,107,53,0.12); color: var(--accent); }

        .card-subtitle { margin: 0; color: var(--muted); font-size: 14px; }

        .tabs { display: inline-flex; gap: 8px; border: 1px solid var(--border); border-radius: 12px; padding: 6px; background: rgba(255,255,255,0.8); }
        .tabs button {
            border: none;
            background: transparent;
            padding: 8px 14px;
            border-radius: 10px;
            font-weight: 700;
            cursor: pointer;
        }
        .tabs button.active { background: rgba(31,122,108,0.12); color: var(--accent-2); }

        .table-card { overflow-x: auto; }
        .table .cancel-link { color: var(--accent); font-weight: 700; }

        .modal-backdrop {
            position: fixed;
            top: 0; left: 0; right: 0; bottom: 0;
            background: rgba(0,0,0,0.55);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 1000;
            padding: 16px;
        }
        .modal { background: #fff; border-radius: var(--radius); padding: 20px; min-width: 320px; max-width: 480px; box-shadow: var(--shadow); }
        .modal.show { display: grid; gap: 14px; }

        .code-box {
            width: 38px;
            height: 44px;
            border-radius: 10px;
            border: 1px solid var(--border);
            text-align: center;
            font-size: 18px;
        }
        @@keyframes fadeUp {
            from { opacity: 0; transform: translateY(12px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @@media (max-width: 960px) {
            .topbar { position: relative; top: 0; }
            .hero { grid-template-columns: 1fr; }
            .grid-2, .grid-3, .form-grid, .report-grid { grid-template-columns: 1fr; }
            .time-row { grid-template-columns: 1fr; }
        }
        @@media (max-width: 900px) {
            .layout { grid-template-columns: 1fr; }
            .drawer {
                position: sticky;
                top: 0;
                z-index: 5;
                grid-template-rows: auto auto;
                gap: 16px;
                border-right: none;
                border-bottom: 1px solid var(--border);
            }
            .drawer-nav {
                grid-auto-flow: column;
                grid-auto-columns: max-content;
                overflow-x: auto;
                overflow-y: hidden;
                padding-bottom: 6px;
            }
            .nav-section { display: contents; }
            .nav-title { display: none; }
            .drawer-footer { display: none; }
        }
    </style>
    @RenderSection("Head", required: false)
</head>
<body>
        <div class="layout">
            <aside class="drawer">
                <div class="brand">
                    <div class="brand-top">
                        <div class="logo-mark">FQ</div>
                        <button class="nav-toggle" type="button" aria-label="Collapse navigation" aria-expanded="true">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M15 6l-6 6 6 6"></path>
                            </svg>
                        </button>
                    </div>
                    <div class="brand-title">FastQ</div>
                    <div class="brand-sub">Queue orchestration</div>
                </div>
                <nav class="drawer-nav">
                    <div class="nav-section">
                        <div class="nav-title">Overview</div>
                        <a class="nav-link active" href="/Home/Index">
                            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M3 11.5L12 4l9 7.5"></path>
                                <path d="M5 10.5V20h14v-9.5"></path>
                            </svg>
                            <span class="nav-text">Dashboard</span>
                        </a>
                        <a class="nav-link" href="/Reporting/Overview">
                            <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M4 19h16"></path>
                                <path d="M7 16V9"></path>
                                <path d="M12 16V5"></path>
                                <path d="M17 16v-7"></path>
                            </svg>
                            <span class="nav-text">Reports</span>
                        </a>
                    </div>
