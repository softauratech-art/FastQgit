@using FT.FastQ.Helpers
@model FT.FastQ.Models.CancelAppointmentViewModel
@{
    ViewBag.Title = ResourceHelper.GetResourceString("CancelAppointment");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-container">
    <h2>@ResourceHelper.GetResourceString("CancelAppointment")</h2>
    
    <div class="cancel-form">
        <div class="form-row">
            <div class="form-group form-group-horizontal">
                <label class="form-label">@ResourceHelper.GetResourceString("DateAndTime")</label>
                <div class="form-control readonly-field">@Model.AppointmentDateTime.ToString("MM-dd-yyyy hh:mm tt")</div>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group form-group-horizontal">
                <label class="form-label">@ResourceHelper.GetResourceString("Service")</label>
                <div class="form-control readonly-field">@Model.Service</div>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group form-group-horizontal">
                <label class="form-label">@ResourceHelper.GetResourceString("ContactBy")</label>
                <div class="form-control readonly-field">@Model.ContactBy</div>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group form-group-horizontal">
                <label class="form-label">@ResourceHelper.GetResourceString("Status")</label>
                <div class="form-control readonly-field status-field @(Model.IsCancelled ? "status-cancelled" : "")">@Model.Status</div>
            </div>
        </div>

        @if (!Model.IsCancelled)
        {
            <div class="form-row">
                <div class="form-group form-group-horizontal">
                    <label class="form-label">
                        @ResourceHelper.GetResourceString("Reason")
                        <span class="required-asterisk">*</span>
                    </label>
                    <div class="form-control-wrapper">
                        <select id="cancelReason" class="form-control dropdown">
                            <option value="">@ResourceHelper.GetResourceString("SelectFromList")</option>
                            <option value="Schedule Conflict">@ResourceHelper.GetResourceString("ScheduleConflict")</option>
                            <option value="No Longer Needed">@ResourceHelper.GetResourceString("NoLongerNeeded")</option>
                            <option value="Found Alternative">@ResourceHelper.GetResourceString("FoundAlternative")</option>
                            <option value="Other">@ResourceHelper.GetResourceString("Other")</option>
                        </select>
                        <span id="reasonValidationMessage" class="validation-message" style="display: none;">@ResourceHelper.GetResourceString("SelectReasonValidation")</span>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="form-row">
                <div class="form-group form-group-horizontal">
                    <label class="form-label">@ResourceHelper.GetResourceString("Reason")</label>
                    <div class="form-control readonly-field">@Model.Reason</div>
                </div>
            </div>
        }

        <div class="form-actions">
            @if (!Model.IsCancelled)
            {
                <button type="button" class="btn btn-back" id="backBtn">@ResourceHelper.GetResourceString("Back")</button>
                <button type="button" class="btn btn-cancel" id="cancelBtn">@ResourceHelper.GetResourceString("Cancel")</button>
            }
            else
            {
                <button type="button" class="btn btn-close" id="closeBtn">@ResourceHelper.GetResourceString("Close")</button>
            }
        </div>
    </div>
</div>

<!-- Custom Confirm Dialog -->
<div id="confirmDialog" class="confirm-dialog-overlay" style="display: none;">
    <div class="confirm-dialog">
        <div class="confirm-dialog-header">
            <h3>@ResourceHelper.GetResourceString("Confirm")</h3>
        </div>
        <div class="confirm-dialog-body">
            <p>@ResourceHelper.GetResourceString("ConfirmCancelMessage")</p>
        </div>
        <div class="confirm-dialog-footer">
            <button type="button" class="btn btn-no" id="confirmNo">@ResourceHelper.GetResourceString("No")</button>
            <button type="button" class="btn btn-yes" id="confirmYes">@ResourceHelper.GetResourceString("Yes")</button>
        </div>
    </div>
</div>

<style>
