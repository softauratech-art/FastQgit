@{
    ViewBag.Title = "Dashboard";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - FastQ</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="dashboard-box">
            <h2>Appointment Dashboard</h2>
            <div class="success-message">You have logged in successfully</div>
            @if (!string.IsNullOrEmpty(ViewBag.Email))
            {
                <p style="text-align: center; margin-top: 10px; color: #666;">Welcome, @ViewBag.Email</p>
            }
        </div>
    </div>
</body>
</html>


