        <div>@Model.DateText</div>
        <a href="@Url.Action(actionName, "Provider", new { start = nextStart, end = nextEnd, userId = queryUserId })" aria-label="Next day">&gt;&gt;</a>
    </div>
    <div class="action-bar" style="padding: 10px 0;">
